{
  "version": "0.0.1",
  "manifest_version": 3,
  "name": "Focus Line",
  "description": "Focus on a line when hovered upon",
  "default_locale": "en",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["scripts/index.js"],
      "css": ["scripts/index.css"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}